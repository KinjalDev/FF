<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/sp_72"
    android:layout_height="@dimen/sp_110">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:animateLayoutChanges="true">

        <ImageView
            android:id="@+id/filter_iv"
            android:layout_width="@dimen/sp_64"
            android:layout_height="@dimen/sp_100dp"
            android:scaleType="centerCrop"
            android:src="@color/gray" />

        <ImageView
            android:id="@+id/check_box"
            android:layout_width="@dimen/sp_20"
            android:layout_height="@dimen/sp_20"
            android:layout_gravity="right|end"
            android:layout_margin="@dimen/sp_5"
            android:background="@drawable/stroked_circle"
            android:padding="@dimen/sp_3"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_done" />

        <TextView
            android:id="@+id/filter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@color/transparent_black"
            android:paddingLeft="@dimen/sp_5"
            android:paddingTop="@dimen/sp_3"
            android:paddingRight="@dimen/sp_5"
            android:paddingBottom="@dimen/sp_3"
            android:text="None"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_12"
            android:textStyle="bold" />

    </FrameLayout>

</RelativeLayout>