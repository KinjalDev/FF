<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_10"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginRight="@dimen/margin_10"
    android:layout_marginBottom="@dimen/margin_8"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/notification_bg"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            app:cardCornerRadius="@dimen/margin_5">

            <ImageView
                android:id="@+id/noti_histroy_img"
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/noti_histroy_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/roboto_medium"
            android:text="John Hosier"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/notification_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noti_histroy_txt_name"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="2sp"
            android:maxLines="3"
            android:text="It is a long established fact that a reader will be distracted by the readable content of a page when looking at its layout."
            android:textColor="@color/black"
            android:textSize="@dimen/text_12" />

        <TextView
            android:id="@+id/noti_histroy_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_des"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/roboto_medium"
            android:text="www.companyname.com"
            android:textColor="@color/darkturquoise"
            android:textSize="@dimen/text_12" />

    </RelativeLayout>
</RelativeLayout>
